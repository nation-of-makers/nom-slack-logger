<?xml version="1.0" encoding="UTF-8"?>
<urlset
  xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
  http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">

  <url>
    <loc><%= url('/') %></loc>
    <lastmod><%= Time.current.iso8601 %></lastmod>
  </url>

  <% channels.each do |channel| %>
    <url>
      <loc><%= url(channel_path(channel)) %></loc>
      <lastmod><%= channel.last_active_at.iso8601 %></lastmod>
    </url>
    <% channel.active_dates.each do |activity| %>
      <url>
        <loc><%= url(channel_path(channel, activity.date)) %></loc>
        <lastmod><%= activity.last_active_at %></lastmod>
      </url>
    <% end %>
  <% end %>
</urlset>
